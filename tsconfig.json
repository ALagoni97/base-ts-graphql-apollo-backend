{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "strict": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "paths": {
      "@context/*": ["context/*"],
      "@graphql-types/*": ["graphql-types/*"],
      "@utils/*": ["utils/*"],
      "@resolvers/*": ["resolvers/*"]
    }
  },
  "include": ["src/**/*"]
}
